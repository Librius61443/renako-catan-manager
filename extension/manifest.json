{
  "manifest_version": 3,
  "name": "Colonist Game Logger",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },
  "content_scripts": [
    {
      "matches": ["https://colonist.io/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}